def is_adult(age: int) -> bool:
    return age >= 18

def is_name_valid(name: str) -> bool:
    return len(name) >= 4

def create_user(name: str, age: int, email: str) -> dict:
    if not is_adult(age):
        return {"success": False, "error": "User is not an adult."}
    if not is_name_valid(name):
        return {"success": False, "error": "Name is not valid."}
    return {"success": True, "username": {"name": name, "age": age, "email": email}}

def print_user_info(user: dict) -> None:
    if user["success"]:
        print(f"✅ User {user['username']['name']}, {user['username']['age']} let, Email: {user['username']['email']}")
    else:
        print(f"❌ Chyba: {user['error']}")

if __name__ == "__main__":
    user1 = create_user("Ivana", 25, "ivana@gmail.com")
    user2 = create_user("Oliver", 17, "oliver@gmail.com")  # Not adult
    user3 = create_user("Bob", 56, "bob@gmail.com")        # Valid
    user4 = create_user("Alice", 30, "alice@gmail.com")          # Invalid name (too short)

    users = [user1, user2, user3, user4]

    for user in users:
        print_user_info(user)
